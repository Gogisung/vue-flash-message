{
  "name": "@smartweb/vue-flash-message",
  "version": "0.2.1",
  "private": true,
  "main": "./build/vue-flash-msg.common.js",
  "files": [
    "build/*",
    "src/components/*",
    "*.json",
    "*.js",
    "*.css",
    "*.svg"
    ],
    "description": "Vue flash message component",
    "keywords": ["vue", "flash message", "flash", "vue message", "vue flash", "vue flash message"],
    "repository": {
        "type" : "git",
        "url" : "https://github.com/smwbtech/vue-flash-message"
    },
    "license": "MIT",
    "author": {
        "name" : "Roman Privalov",
        "email" : "roman.privalov@gmail.com",
        "url" : "https://t.me/RomanPrivalov"
    },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lib": "vue-cli-service build --target lib --name vue-flash-msg ./src/components/index.js --dest ./build",
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit"
  },
  "dependencies": {
    "vue": "^2.5.17"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.2.0",
    "@vue/cli-plugin-eslint": "^3.2.0",
    "@vue/cli-plugin-unit-jest": "^3.2.0",
    "@vue/cli-service": "^3.2.0",
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0-0",
    "postcss-preset-env": "^6.4.0",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-preset-env": {
        "stage": 2,
        "features": {
          "nesting-rules": true,
          "custom-properties": {
            "preserve": false,
            "importFrom": "./src/assets/css/variables.css"
          }
        }
      }
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "**/tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/"
  }
}
